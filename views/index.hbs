{{#if jobs}}
  <h1>Webhooks</h1>
  <button class="removeAll failed">Remove all jobs</button>
  <div id="jobs">
      <table>
        <tr>
          <th>URL</th>
          <th>Interval</th>
          <th>Status</th>
          <th>Next Run</th>
          <th>Last Run</th>
          <th>Last Finished</th>
          <th>Edit</th>
          <th>Remove</th>
        </tr>
      {{#each jobs}}
        <tr>
          <td class="url">{{url}}</td>
          <input type="hidden" class="body" value="{{body}}">
          <td class="interval">{{repeatInterval}}</td>
          <td class="status">{{status}}</td>
          <td class="next">{{nextRunAt}}</td>
          {{#if lastRunAt}}
            <td class="last-run">{{lastRunAt}}</td>
          {{/if}}
          {{#if lastFinishedAt}}
            <td class="last-finished">{{lastFinishedAt}}</td>
          {{/if}}
          <td><a href="#" class="edit" data-id="{{id}}"><i class="fa fa-pencil"></i></a></td>
          <td><a href="#" class="remove" data-id="{{id}}"><i class="fa fa-trash"></i></a></td>
        </tr>
      {{/each}}
      </table>
  </div>
{{else}}
  <h1 class="title">{{title}}</h1>
{{/if}}

<h2>Create a job</h2>
<input type="text" class="url" placeholder="url" />
<input type="text" class="scheduling" placeholder="scheduling" />
<textarea class="body" placeholder="body (JSON)"></textarea>
<button class="create" >Create</button>

<div class="layer ask">
  <div class="content">
    <a href="#" class="cancel"><i class="fa fa-times"></i></a>
    <h2>Edit</h2>
    <div class="editFields"> 
      <input type="text" class="edit-url" placeholder="url" />
      <input type="text" class="edit-scheduling" placeholder="scheduling" />
      <textarea class="edit-body" placeholder="body (JSON)"></textarea>
      <button class="editBtn">Edit</button>
    </div>
  </div>
</div>